package Day1;
import java.util.Scanner;
		public class Weather {
			    public static void main(String[] args) {
			        Scanner scanner = new Scanner(System.in);

			        
			        System.out.print("Enter the weather (raining, cloudy, normal): ");
			        String weather = scanner.nextLine().toLowerCase();

			     			        if (weather.equals("raining")) {
			            System.out.println("It's raining. Take an umbrella!");
			        } else if (weather.equals("cloudy")) {
			            System.out.println("It's cloudy. Might rain later, stay prepared.");
			        } else if (weather.equals("normal")) {
			            System.out.println("The weather is normal. ");
			        } else {
			            System.out.println("Invalid input. Please enter 'raining', 'cloudy', or 'normal'.");
			        }
			   scanner.close();

			        
			    }
			}
			

